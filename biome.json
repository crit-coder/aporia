{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"formatter": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"complexity": {
				"useArrowFunction": "info",
				"noUselessLoneBlockStatements": "warn",
				"noForEach": "warn"
			},
			"style": {
				"useConst": "warn",
				"useTemplate": "warn",
				"useBlockStatements": "warn"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"arrowParentheses": "asNeeded",
			"semicolons": "asNeeded",
			"jsxQuoteStyle": "single"
		}
	}
}